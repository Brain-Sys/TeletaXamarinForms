<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teleta.Bari.XF.App">
    <Application.Resources>

        <ResourceDictionary>
            <Color x:Key="MainColor">#EDBFF5</Color>
            <x:String x:Key="TitleApp">Teleta Manager App</x:String>


            <Style x:Key="btnBase" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Red" />
                <Setter Property="FontSize" Value="50" />
                <Setter Property="WidthRequest" Value="180.0"></Setter>
            </Style>

            <Style x:Key="btnBaseBigger" TargetType="Button"
                   BasedOn="{StaticResource btnBase}">
                <Setter Property="Scale" Value="1.5" />
            </Style>






        </ResourceDictionary>

    </Application.Resources>
</Application>